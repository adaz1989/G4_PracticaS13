@model PracticaS13_WEB.Models.PrincipalModel

@{
    ViewData["Title"] = "Saldo de Compra";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm rounded-4 border-0">
                <div class="card-header text-white rounded-top-4" style="background-color: #004589;">
                    <h4 class="mb-0 d-flex align-items-center">
                        <i class="bi bi-wallet2 me-2"></i> Saldo de la Compra
                    </h4>
                </div>

                <div class="card-body p-4">

                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show d-flex align-items-center" role="alert">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            <div>@TempData["Mensaje"]</div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                        </div>
                    }

                    @if (Model != null)
                    {
                        <table class="table table-bordered text-center mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-primary">Saldo Disponible</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="fs-4 fw-bold text-success">@Model.Saldo.ToString("C")</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning mt-3">
                            No se pudo obtener la información del saldo.
                        </div>
                    }

                    <div class="text-end mt-4">
                        <a asp-action="Index" asp-controller="Principal" class="btn btn-outline-secondary px-4 py-2 rounded-3">
                            <i class="bi bi-arrow-left me-1"></i> Volver a Compras
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
