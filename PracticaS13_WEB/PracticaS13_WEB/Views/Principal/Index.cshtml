@model List<PracticaS13_WEB.Models.PrincipalModel>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Compras</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Compras</h1>

        <!-- Mensaje de TempData -->
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-info">
                @TempData["Mensaje"]
            </div>
        }

        <!-- Botón para ComprasPendientes -->
        <div class="mb-3">
            <a href="@Url.Action("ComprasPendientes", "Principal")" class="btn btn-primary">
                <i class="bi bi-clock-history"></i> Compras Pendientes
            </a>
        </div>

        <!-- Tabla de compras -->
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Descripción</th>
                    <th>Monto</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var compra in Model)
                    {
                        <tr>
                            <td>@compra.IdCompra</td>
                            <td>@compra.Descripcion</td>
                            <td>@compra.Precio.ToString("C")</td>
                            <td>@compra.Estado</td>
                            <td>
                                <a href="@Url.Action("SaldoCompra", "Principal", new { idCompra = compra.IdCompra })" class="btn btn-info">
                                    <i class="bi bi-currency-dollar"></i> Ver Saldo
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No se encontraron compras.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Incluye los scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
