@model List<PracticaS13_WEB.Models.PrincipalModel>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Compras</title>

    <link href="~/css/estilos.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
</head>

<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12">
                <div class="card border-0 shadow rounded-4">
                    <div class="card-header text-white rounded-top-4 d-flex justify-content-between align-items-center" style="background-color: #004589;">
                        <h4 class="mb-0 d-flex align-items-center">Lista de Compras</h4>
                        <a href="@Url.Action("ComprasPendientes", "Principal")" class="btn btnPendientes">
                            <i class="bi bi-clock-history me-1"></i> Pendientes
                        </a>
                    </div>
                    <div class="card-body p-4">

                        @if (TempData["Mensaje"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <div>@TempData["Mensaje"]</div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                            </div>
                        }

                        <div class="table-responsive">
                            <table class="table align-middle text-dark mb-0">
                                <thead class="text-white" style="background-color: #004588;">
                                    <tr>
                                        @*
                                        <th>Código Compra</th>
                                        <th style="width: 40%;">Descripción</th>
                                        <th style="width: 35%;">Monto</th>
                                        <th style="width: 10%;">Estado</th>
                                        <th style="width: 10%;">Acciones</th>
                                        *@
                                        <th>Código Compra</th>
                                        <th >Descripción</th>
                                        <th>Precio</th>
                                        <th >Saldo</th>
                                        <th >Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var compra in Model)
                                        {
                                            <tr>
                                                <td>@compra.IdCompra</td>
                                                <td>@compra.Descripcion</td>
                                                <td>@compra.Precio.ToString("C")</td>
                                                <td>@compra.Saldo.ToString("C")</td>
                                                <td>
                                                    <span class="badge @(compra.Estado == "Pendiente" ? "bg-warning text-dark" : "bg-success")">
                                                        @compra.Estado
                                                    </span>
                                                </td>
                                                @* <td> *@
                                                @*     <a href="@Url.Action("SaldoCompra", "Principal", new { idCompra = compra.IdCompra })" *@
                                                @*        class="btn btnSaldo"> *@
                                                @*         <i class="bi bi-currency-dollar me-1"></i> Saldo *@
                                                @*     </a> *@
                                                @* </td> *@
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center text-muted py-4">No se encontraron compras registradas.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
