@model List<PracticaS13_WEB.Models.PrincipalModel>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Compras</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>

<body class="bg-light">

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-dark fw-bold">
                <i class="bi bi-cart4 me-2"></i> Lista de Compras
            </h2>

            <a href="@Url.Action("ComprasPendientes", "Principal")" class="btn btn-primary">
                <i class="bi bi-clock-history me-1"></i> Ver Pendientes
            </a>
        </div>

        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success shadow-sm d-flex align-items-center" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                <div>@TempData["Mensaje"]</div>
            </div>
        }

        <div class="table-responsive shadow rounded">
            <table class="table align-middle text-dark mb-0" style="background-color: #ffffff;">
                <thead style="background-color: #004588;" class="text-white">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Monto</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var compra in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@compra.IdCompra</td>
                                <td>@compra.Descripcion</td>
                                <td>@compra.Precio.ToString("C")</td>
                                <td>
                                    <span class="badge @(compra.Estado == "Pendiente" ? "bg-warning text-dark" : "bg-success")">
                                        @compra.Estado
                                    </span>
                                </td>
                                <td>
                                    <a href="@Url.Action("SaldoCompra", "Principal", new { idCompra = compra.IdCompra })"
                                       class="btn btn-primary">
                                        <i class="bi bi-currency-dollar me-1"></i> Ver Saldo
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">No se encontraron compras registradas.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
