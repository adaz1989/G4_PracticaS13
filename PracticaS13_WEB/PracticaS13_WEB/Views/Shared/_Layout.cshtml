<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PracticaS13_WEB</title>

    <!-- Estilos -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PracticaS13_WEB.styles.css" asp-append-version="true" />

    <!-- Estilo para vista de Inicio -->
    <style>
        @if (ViewData["Title"]?.ToString() == "Inicio")
        {
            @:html, body { height: 130vh !important; }
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

  <!-- Navbar -->
<!-- Navbar -->
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm py-3">
        <div class="container" style="max-width: 1100px;">
            <!-- Logo + nombre -->
            <a class="navbar-brand d-flex align-items-center fw-bold fs-5" asp-controller="Home" asp-action="Index">
                <i class="bi bi-code-slash me-2 fs-4"></i> PracticaS13_WEB
            </a>

            <!-- Botón hamburguesa -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menú colapsable -->
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-lg-3">
                    <li class="nav-item">
                        <a class="nav-link text-white d-flex align-items-center fw-semibold fs-6" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill me-2"></i>Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white d-flex align-items-center fw-semibold fs-6" asp-controller="Principal" asp-action="Index">
                            <i class="bi bi-cart-fill me-2"></i>Compras
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white d-flex align-items-center fw-semibold fs-6" asp-controller="Abono" asp-action="Index">
                            <i class="bi bi-cash-coin me-2"></i>Abonos
                        </a>
                    </li>
              
                </ul>

                <!-- Texto final -->
                <span class="navbar-text text-white fw-semibold ms-lg-4 mt-3 mt-lg-0">
                    ¡Bienvenido al sistema!
                </span>
            </div>
        </div>
    </nav>
</header>




    <!-- Contenido principal -->
    @if (ViewData["Title"]?.ToString() == "Inicio")
    {
        @RenderBody() <!-- SIN container -->
    }
    else
    {
        <main role="main" class="flex-fill container mt-4 pb-3">
            @RenderBody()
        </main>
    }

    <!-- Footer -->
    <footer class="bg-primary text-white text-center py-3 mt-auto">
        <div class="container">
            &copy; 2025 - PracticaS13_WEB -
            <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-underline">Privacidad</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
