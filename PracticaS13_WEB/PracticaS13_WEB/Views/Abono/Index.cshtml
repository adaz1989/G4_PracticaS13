@{
    ViewData["Title"] = "Abonos";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">
                    <h2 class="card-title mb-4 text-primary fw-bold">Registrar Abono</h2>
                    <p class="mb-4 text-secondary">Haz clic en el botón para registrar un nuevo abono en el sistema.</p>
                    <a asp-controller="Abono" asp-action="Registrar" class="btn btn-outline-primary btn-lg px-4 py-2">
                        Ir a Registrar Abono
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
