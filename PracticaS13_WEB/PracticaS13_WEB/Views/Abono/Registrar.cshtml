@model PracticaS13_WEB.Models.AbonoModel
@{
    ViewData["Title"] = "Registrar Abono";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/Estilos.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Registrar Abono
                    </h2>
                </div>
                <div class="card-body">
                    @* Muestra un mensaje si se ha enviado uno por TempData *@
                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @TempData["Mensaje"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Formulario para registrar un abono -->
                    <form asp-action="Registrar" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="IdCompra" class="form-label">ID Compra</label>
                            <input asp-for="IdCompra" type="number" class="form-control" placeholder="Ingrese el ID de la compra" required />
                            <div class="invalid-feedback">
                                Por favor ingresa el ID de la compra.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label">Monto</label>
                            <input asp-for="Monto" type="number" step="0.01" class="form-control" placeholder="Ingrese el monto" required />
                            <div class="invalid-feedback">
                                Por favor ingresa un monto válido.
                            </div>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save2"></i> Guardar Abono
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts de Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Script para activar la validación del formulario -->
<script>
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
